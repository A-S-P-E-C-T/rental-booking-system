<% layout("/layouts/boilerplate.ejs") %>

<div class="row">
  <div class="col-8 offset-3">
    <b><h3 class="mt-3 ">Listing Details</h3></b>
  </div>
<div class="card show-card col-6 offset-3 mt-3">
  <img
    src="<%= listing.image %>"
    class="card-img-top show-img"
    alt="listing image"
    style="height: 20rem"
  />
  <div class="card-body">
    <b><p class="card-title"><%= listing.title %></p></b>
    <p class="card-text"><%= listing.description %></p
    <p class="card-price">
      &#8377;<%= listing.price.toLocaleString("en-In") %> / night
    </p>
    <p class="card-location"><%= listing.location %></p>
    <p class="card-country"><%= listing.country %></p>
    <div class="show-btns" style="display: flex; justify-content: start;">
<a href="/listings/<%= listing._id %>/edit" class="btn edit-btn mb-3" style="margin-right: 1rem;" >Edit</a>
    <form action="/listings/<%= listing._id %>?_method=DELETE" method="POST">
    <button class="btn btn-dark">Delete Listing</button>
    </div>
    
  </div>
  </div>
  </form>
</div>
