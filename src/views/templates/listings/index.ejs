<% layout("/layouts/boilerplate.ejs") %>
    <h1 class="mt-3">All Listings</h1>
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
<%for(let listing of allListings) {%>
  <a href="/listings/<%= listing._id %>" class="listing-link">
    <div class="card listing-card col">
  <img src="<%= listing.image %>" class="card-img-top" alt="listing image" style="height: 20rem;">
  <div class="listing-card-img-overlay"></div>
  <div class="card-body">
    <b><p class="card-title"><%= listing.title %></p></b>
    <p class="card-text"><%= listing.description %></p>
    <p class="card-price">&#8377;<%= listing.price.toLocaleString("en-In") %> / night</p>
  </div>
</div>
  </a>
<%}%>
</div>