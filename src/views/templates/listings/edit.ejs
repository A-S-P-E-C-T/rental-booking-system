<% layout("/layouts/boilerplate.ejs") %>

<h2 class="mt-3">Edit Listing:</h2>
<div class="row">
  <div class="col-lg-8 col-md-10 col-sm-12 offset-lg-2 offset-md-1">
    <form
      action="/listings/<%= listing._id %>?_method=PATCH"
      method="POST"
      novalidate
      class="needs-validation"
      enctype="multipart/form-data"
    >
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input
          type="text"
          name="title"
          class="form-control"
          value="<%= listing.title %>"
          required
        />
        <div class="valid-feedback">Title looks good!</div>
        <div class="invalid-feedback">Please inter a valid title</div>
        <br />
      </div>
      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea
          name="description"
          id="description"
          class="form-control"
          required
        >
<%= listing.description %></textarea
        >
        <div class="invalid-feedback">Please enter a short description</div>
        <br />
      </div>
      <div class="mb-3">
        <div class="image-preview">
          <img src="<%= listing.image.imageUrl %>" alt="preview-image">
        </div>
        <label for="listing-image" class="form-label">Image</label>
        <input type="file" name="listing-image" class="form-control"/>
        <br>
      <div class="mb-3">
        <label for="price" class="form-label">Price</label>
        <input
          type="number"
          name="price"
          class="form-control"
          value="<%= listing.price %>"
          required
        />
        <div class="invalid-feedback">Please enter a valid price</div>
        <br />
      </div>
      <div class="row">
        <div class="mb-3 col-4">
          <label for="location" class="form-label">Location</label>
          <input
            type="text"
            name="location"
            class="form-control"
            value="<%= listing.location %>"
            required
          />
          <div class="invalid-feedback">Please enter a valid location</div>
          <br />
        </div>
        <div class="mb-3 col-5">
          <label for="country" class="form-label">Country</label>
          <input
            type="text"
            name="country"
            class="form-control"
            value="<%= listing.country %>"
            country
          />
          <div class="invalid-feedback">Please enter a valid country name</div>
          <br />
        </div>
        <div style="text-align: center">
          <button class="btn btn-dark edit-btn">Update</button>
        </div>
      </div>
    </form>
  </div>
</div>
