<% layout("/layouts/boilerplate.ejs") %>

<h2 class="mt-3 text-center">Login to WanderPad</h2>
<div class="row">
  <div class="col-lg-8 col-md-10 col-sm-12 offset-lg-2 offset-md-1">
    <form action="/login" method="POST" novalidate class="needs-validation">
      <div class="mb-3 col-6 offset-3">
        <label for="email" class="form-label">Username</label>
        <input
          type="text"
          name="username"
          placeholder="Enter username"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Username is required</div>
        <br />
      </div>
      <div class="mb-3 col-6 offset-3">
        <label for="password" class="form-label">Password</label>
        <input
          type="password"
          name="password"
          placeholder="Enter password"
          class="form-control"
          required
        />
        <div class="invalid-feedback">password is required</div>
        <br />
      </div>
      <div style="text-align: center">
        <button class="btn btn-dark add-btn">Login</button>
      </div>
    </form>
  </div>
</div>
